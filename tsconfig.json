{
  "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      //"noImplicitAny": true, //在表达式和声明上有隐含的 any类型时报错。
      "removeComments": true,
      "noEmitOnError": true,
      "noLib": false,
      //        "alwaysStrict": true,
      "sourceMap": true,
      "noEmit": false,
      "noEmitHelpers": true,
      "allowUnreachableCode": true,
      "newLine": "LF", // 当生成文件时指定行结束符： "crlf"（windows）或 "lf"（unix）。
      "lib": [
          "ES2017",
          "DOM",
          "DOM.Iterable",
          "ScriptHost",
          "ES2015.Promise"
      ],
      "typeRoots": [
          "node_modules/@types"
      ],
      "outDir": "dist-server",
      "rootDir": "server"
  },
  "exclude": [
      "node_modules",
      "dist-server",
      "dist-client",
      "node-mongodb-demo"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}